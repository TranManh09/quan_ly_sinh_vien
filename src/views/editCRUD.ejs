<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>edit user information</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="post">   
                <div class="form-row">
                    <div class="col-12 mt-3">edit user information</div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Fist name</label>
                    <input type="text" class="form-control" name="fistName" placeholder="Email" value="<%= user.firstName %>">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Last name</label>
                    <input type="text" class="form-control" name ="lastName" placeholder="Password" value="<%= user.lastName %>">
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputAddress">Address</label>
                  <input type="text" class="form-control" name="address" placeholder="1234 Main St" value="<%= user.address %>">
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
                <input type="text" name="id" value="<%= user.id %>" hidden>
            </form>
        </div>
    </div>
    
</body>
</html>